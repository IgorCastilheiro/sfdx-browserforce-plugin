        "homePageLayouts": {
          "$ref": "./home-page-layouts/schema.json"
        },
        "lexEnabler": {
          "$ref": "./lex-enabler/schema.json"
        },
        "lightningExperienceSettings": {
          "$ref": "./lightning-experience-settings/schema.json"
        },
